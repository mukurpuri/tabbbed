{
  "name": "Tabbbed",
  "version": "0.4",
  "manifest_version": 2,

  "description": "Group your tabs and make your life easier",
  
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "tabbbed.html",
    "default_title": "Show Tabbbed"
  },

  "permissions": ["tabs","http://*/*", "https://*/*","storage"],

  "icons": {
    "128": "images/icon.png",
    "256": "images/icon.png",
    "512": "images/icon.png"
  }

}
